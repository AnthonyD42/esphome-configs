{
    "files.associations": {
        "*.yaml": "esphome"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultColorDecorators": "never",
        "editor.quickSuggestions": {
            "strings": "on"
        },
        "customTags": [
            "!lambda scalar",
            "!include scalar",
            "!secret scalar",
            "!lambda sequence",
            "!include sequence",
            "!secret sequence"
        ]
    }
}